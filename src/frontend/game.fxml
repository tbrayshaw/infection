<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.Pane?>
<GridPane fx:controller="frontend.GameController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" vgap="20"
        >

    <Pane fx:id="board" onMouseReleased="#boardClicked" GridPane.columnIndex="0"
            GridPane.rowIndex="0" GridPane.columnSpan="3" GridPane.rowSpan="3"/>

    <Label fx:id="p1namelabel" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label fx:id="p2namelabel" GridPane.columnIndex="2" GridPane.rowIndex="3"
           GridPane.halignment="RIGHT"/>
    <Label fx:id="p1scorelabel" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label fx:id="p2scorelabel" GridPane.columnIndex="2" GridPane.rowIndex="4"
           GridPane.halignment="RIGHT"/>

    <Label fx:id="instructions" GridPane.columnIndex="1" GridPane.rowIndex="3"
           GridPane.columnSpan="1" GridPane.rowSpan="2"/>


</GridPane>

